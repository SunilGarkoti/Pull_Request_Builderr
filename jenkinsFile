
pipeline { 
    agent any 

    
    environment {
    PATH = "/Users/sunilgarkoti/pipeline:$PATH"
  }
    
    
    stages {
        stage('Build') { 
            steps { 
                echo "Build is running" 
                 echo "PATH is: $PATH"
            }
        }
        stage('Test'){
            steps {
                echo "Test is running"
                 sh "/Users/sunilgarkoti/pipeline/make.sh"
             
            }
        }
        stage('Deploy') {
            steps {
                echo "Deployement is on processs"
                 sh "/Users/sunilgarkoti/pipeline/make.sh"
            }
        }
    }
}
