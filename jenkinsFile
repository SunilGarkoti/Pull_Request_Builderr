
pipeline { 
    agent any 

    
    environment {
    PATH = "/Users/sunilgarkoti/pipeline"
  }
    
    
    stages {
        stage('Build') { 
            steps { 
                echo "Build is running" 
            }
        }
        stage('Test'){
            steps {
                echo "Test is running"
                 sh "/Users/sunilgarkoti/pipeline/make.sh"
            }
          
           post {
           always {
           build 'Maven_Project'
       }
  }
        
        
        
        }
        stage('Deploy') {
            steps {
                echo "Deployement is on processs"
                 sh "/Users/sunilgarkoti/pipeline/make.sh"
            }
        }
    }
}
