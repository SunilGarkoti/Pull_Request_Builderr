
pipeline { 
    agent any 
    
    environment {
    Location = "/Users/sunilgarkoti/pipeline/"
}
    
    stages {
        stage('Build') { 
            steps { 
                echo "Build is running" 
                sh "$Location make.sh"
            }
        }
        stage('Test'){
            steps {
                echo "Test is running"
                 sh "/Users/sunilgarkoti/pipeline/make.sh"
             
            }
        }
        stage('Deploy') {
            steps {
                echo "Deployement is on processs"
                 sh "/Users/sunilgarkoti/pipeline/make.sh"
            }
        }
    }
}
